<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SectionLayout"
    android:background="@color/grey"
    android:orientation="vertical"
    android:layout_margin="1dp"
    tools:context=".view.HomeActivity">

    <TextView
        android:id="@+id/txt_name"
        style="@style/Label"
        tools:text="Product name"/>

    <LinearLayout
        style="@style/SectionPadded"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_view_count"
            style="@style/WrapLayout"
            android:layout_weight=".3"
            android:textSize="@dimen/subtitle_text_size"
            tools:text="2 Views"/>

        <TextView
            android:id="@+id/txt_order_count"
            style="@style/WrapLayout"
            android:layout_weight=".3"
            android:textSize="@dimen/subtitle_text_size"
            tools:text="2 Orders"/>

        <TextView
            android:id="@+id/txt_shares"
            style="@style/WrapLayout"
            android:layout_weight=".3"
            android:textSize="@dimen/subtitle_text_size"
            tools:text="2 Shares"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_date_added"
        style="@style/Label"
        android:textSize="@dimen/subtitle_text_size"
        tools:text="Date added"/>
</LinearLayout>